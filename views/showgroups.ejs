<!DOCTYPE html>
<html>
<head>
<title>Home Page</title>
<link rel='stylesheet' href='/stylesheets/style.css' />
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script
	src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script
	src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
<link rel="stylesheet"
	href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<script src="angularjs/ui-bootstrap-tpls-0.13.4.js"></script>
<script src="/angular/DisplayGrpController.js"></script>
</head>
<body ng-app="dispgroups" ng-controller="dispgroupsCtrl" ng-init="init('<%= data[0].group_name %>')">
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-1">
			<div class="navbar-header">
				<a class="navbar-brand" href="#"> <img length="30px"
					height="30px" alt="Brand" src="/Images/fbbrand.jpg">
				</a>
			</div>
		</div>
		<div class="col-md-3">
			<form id="f1" method="get" action="loadUserProfile">
				<div class="row">
					<br />
					<div class="col-lg-12">
						<div class="input-group">
							<input type="text" class="form-control"
								placeholder="Search Facebook"> <span
								class="input-group-btn">
								<button class="btn btn-default" type="button">
									<span class="glyphicon glyphicon-search"></span>
								</button>
							</span>
						</div>
					</div>
					<!-- /input-group -->
				</div>
				<br />
			</form>
		</div>
		<!-- /.row -->
	</div>
	<div class="row2">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<center>,
			<div class="well"><h3><i><%= data[0].group_name %></i></h3></div>
		</center>
	<div class="col-md-6 well"><textarea class="form-control"> <%= data[0].group_desc %></textarea></div>
	<div class="col-md-6">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4>Group Members</h4>
			</div>
			<table class="table table-hover">
				<span ng-if="grpmembers != null">
					<tr ng-repeat="m in grpmembers">
						<td>{{ m.member[0] }} 
							<button type="button" ng-click="deleteMember(m.group_name,m.member[0])"
								class="btn btn-primary pull-right">Delete Member</button>
								</span>
								</span>
				</span>
				</td>
				</tr>
			</table>
				
						<center><button type="button" ng-click="addmem()"
								class="btn btn-primary pull-right">Add Member</button></center>
		</div>
		<br/>
		<div ng-hide ="add">
		<input type = "text" class="form-control" ng-model="ngnametoadd" placeholder="Enter Name"/><br/>
		<center><button type="button" ng-click="addMember('<%= data[0].group_name %>')"
								class="btn btn-primary ">Add</button></center>
		</div>
		</div>
	<div class="col-md-2"></div>
	</div>
</body>
</html>