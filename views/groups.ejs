<!DOCTYPE html>
<html>
<head>
<title>Home Page</title>
<link rel='stylesheet' href='/stylesheets/style.css' />
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script
	src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script
	src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
<link rel="stylesheet"
	href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<script src="angularjs/ui-bootstrap-tpls-0.13.4.js"></script>
<script src="/angular/GroupController.js"></script>
</head>
<body ng-app="mygroups" ng-controller="GroupsCtrl"
	ng-init="init()">
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-1">
					<div class="navbar-header">
						<a class="navbar-brand" href="#"> <img length="30px" height="30px" alt="Brand" src="/Images/fbbrand.jpg">
						</a>
				</div>
		</div>
		<div class="col-md-3">
			<form id="f1" method="get" action="loadUserProfile">
				<div class="row">
					<br />
					<div class="col-lg-12">
						<div class="input-group">
							<input type="text" class="form-control"
								placeholder="Search Facebook"> <span
								class="input-group-btn">
								<button class="btn btn-default" type="button">
									<span class="glyphicon glyphicon-search"></span>
								</button>
							</span>
						</div>
					</div>
					<!-- /input-group -->
				</div><br/>
			</form>
		</div>
		<!-- /.row -->



		<div class="col-md-2"></div>
		<div class="col-md-1">
			<br /> <a href="#"><font color="white"><span
					class="glyphicon glyphicon-home"></span><b> Home</b></font></a>
		</div>
		<div class="col-md-1">
			<br /> <a href="#"><font color="white"><span
					class="glyphicon glyphicon-log-out"></span><b> Sign Out</b></font></a>
		</div>
		<div class="col-md-1">
			<br /> <a href="#"><font color="white"><span
					class="glyphicon glyphicon-user"></span></font></a>
		</div>
			
		</div>
	</div>
	
<div clss="row2">
<div class="col-md-2">
</div>
<div class="col-md-4">
<div class="panel panel-default">
		  <div class="panel-heading"><h4>Groups Joined</h4></div>
		  <table class="table table-hover">	
		  <span ng-if="grps_joined != null">
		   <tr ng-repeat="g in grps_joined">
		  <td> {{ g.group_name }} 
		  </span>
		  </td> 
		  </tr>
		  </table>
		   </div>
		  </div>
</div>
<div class="col-md-4">
<div class="panel panel-default">
		  <div class="panel-heading"><h4>Groups Created</h4></div>
		  <table class="table table-hover">	
		  <span ng-if="grps_created != null">
		   <tr ng-repeat="g in grps_created">
		  <td> {{ g.group_name }}  
	  <button type="button" ng-click="deleteGroup(g.group_name)" class="btn btn-primary pull-right">Delete Group</button> 
	   <button type="button" ng-click="displayGroup(g.group_name,g.group_desc,g.member)" class="btn btn-primary pull-right">Visit Group</button>  
	  </span>
		  </td> 
		  </tr>
		  </table>
		   </div>
		   <br/>
		   <center>
		   <button type="button" ng-click="create()" class="btn btn-primary">Create Group</button><br/><br/>
		   <div ng-hide="createGrp">
		   <input type = "text" class="form-control" ng-model="nggrpname" placeholder="Enter Group Name"/><br/>
		   <input type = "text" class="form-control" ng-model="nggrpdesc" placeholder="Enter Group Description"/><br/>
		   <button type="button" ng-click="createGroup()" class="btn btn-primary">Create</button>
		   </center>
</div>

</body>
</html>
